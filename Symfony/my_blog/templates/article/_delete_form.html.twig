<form method="post" name="delete-{{ article.id }}" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <a href="#" onclick="document.forms['delete-{{ article.id }}'].submit()">Delete</a>
</form>
